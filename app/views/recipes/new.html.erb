<div class="contents row">
  <div class="container">
    <h3>投稿ページ</h3>
    <%= form_with(model: @recipe) do |form| %>
      <div class="field">
        <%= form.label :"料理名" %>
        <%= form.text_field :name, placeholder: "" %>
      </div>

      <div class="field">
        <div class="weight-bold-text">
          カテゴリー
          <span class="indispensable"></span>
        </div>
        <%= form.collection_select(:category_id, Category.all, :id, :name, {}, { class: "select-box", id: "recipe-category" }) %>
      </div>

      <div class="field">
        <%= form.label :"料理名" %>
        <%= form.text_area :text, placeholder: "", rows: "10" %>
      </div>

      <%= form.submit "投稿する" %>
    <% end %>
  </div>
</div>